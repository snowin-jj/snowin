---
import '@fontsource/raleway/400.css';
import '@fontsource/raleway/700.css';
import Footer from './Footer.astro';
import Navbar from './Navbar.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width' />
    <meta
      name='title'
      property='og:title'
      content='Snowin - Full Stack Developer & Designer'
    />
    <meta property='og:type' content='profile' />
    <meta property='og:type' content='website' />
    <meta name='image' property='og:image' content='/thumbnail.png' />
    <meta property='og:url' content='https://www.devsnow.in' />

    <meta
      name='twitter:text:title'
      content='Snowin - Full Stack Developer & Designer'
    />
    <meta name='twitter:site' content='@im_snowin' />
    <meta name='twitter:creator' content='@im_snowin' />
    <meta
      name='description'
      property='og:description'
      content="Hi, this is Snowin. I'm a full stack developer. This is a portfolio site of mine!"
    />
    <meta name='author' content='Snowin' />
    <meta
      name='keywords'
      content='snowin, devsnow, DevSnow, Snowin, DevSnowin, who is snowin, developer snowin, web developer snowin, developer DevSnow, web developer DevSnow, Innovative youngster, The Innovator, Innovative Person'
    />
    <meta name='robots' content='index, follow' />
    <meta name='generator' content={Astro.generator} />
    <link rel='icon' type='image/icon' href='/logo.png' />
    <title>{title}</title>
  </head>
  <body class='md:text-xl'>
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer base {
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth !important;
      scroll-padding: var(--scroll-padding, 6rem);
      font-family: 'Raleway', sans-serif;
      background-color: #fff;
      color: #121212;
    }

    input,
    textarea {
      outline: none !important;
      appearance: none !important;
    }

    a {
      transition: color 0.3s ease-in-out;
    }
  }

  @layer components {
    .heading {
      @apply text-4xl font-bold lg:text-6xl;
    }

    .main-gradient {
      background: linear-gradient(
        98.54deg,
        #ee8e8e 3.01%,
        rgba(169, 125, 221, 0.766146) 25.69%,
        rgba(243, 215, 115, 0.443331) 57%,
        rgba(150, 227, 190, 0.212763) 79.36%,
        rgba(102, 179, 234, 0.38) 100%
      );
    }

    .form-inputs {
      background-color: #ffffff30;
      backdrop-filter: blur(80px);
      border: solid 2px #ffffff;
      background-clip: padding-box;
      box-shadow: 10px 10px 10px rgba(46, 54, 68, 0.03);
    }
  }
</style>
